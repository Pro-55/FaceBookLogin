<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorTextWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="searchBarVisuals">
        <item name="android:background">@drawable/edit_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="buttonVisuals">
        <item name="android:background">@drawable/edit_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="buttonLoginVisuals">
        <item name="android:background">@drawable/login_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="buttonFBLoginVisuals">
        <item name="android:background">@drawable/login_fb_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="buttonTwitterLoginVisuals">
        <item name="android:background">@drawable/login_twitter_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="buttonGoogleLoginVisuals">
        <item name="android:background">@drawable/login_google_background</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="floatingButtonVisuals">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="textVisuals">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="textHeadVisuals">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="elementVisuals">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="switchVisuals">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

</resources>
